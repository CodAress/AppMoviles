<?xml version="1.0" encoding="utf-8"?>
<!-- Layout Principal -->
<!-- Se crea un LinearLayout con orientación vertical -->
<!--
Se agrega un padding de 30dp, este padding sirve para
que los elementos no queden pegados a los bordes de la pantalla
-->

<LinearLayout

    android:orientation="vertical"
    android:padding="30dp"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <!--
    Se agrega un TextView con el texto "RETROFIT = ROOM"
    Se le asigna un tamaño de texto de 20dp
    Se le asigna un alineamiento de texto al centro
    Se le asigna un margen superior de 20dp

    -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RETROFIT = ROOM"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtConsulta"
        android:hint="Ingrese la consulta"
        android:layout_marginTop="10dp"
        android:text="Ingrese Codigo Postal"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consultar Post"
        android:id="@+id/btnConsultar"
        android:padding="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtRes"
        android:textSize="17dp"
        android:layout_marginTop="20dp"
        android:text=""/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grabar en SQLite"
        android:id="@+id/btnGrabar"
        android:padding="10dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnListar"
        android:text="Listar de SQLite"
        android:layout_marginTop="10dp"/>
</LinearLayout>